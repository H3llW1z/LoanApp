<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Panassevich" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_800</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/teal_100</item>
        <item name="actionBarStyle">@style/NightThemeActionBarStyle</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#182220</item>
        <item name="colorSurface">@color/teal_900</item>
        <item name="colorOnSurface">@color/teal_50</item>
        <item name="hintTextColor">@color/teal_100</item>
        <item name="colorOnBackground">@color/teal_50</item>
    </style>
</resources>